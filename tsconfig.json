{
	"compilerOptions": {
	  "module": "ES6",
	  "target": "ES6",
	  "lib": ["DOM", "ESNext"],
	  "strict": true,
	  "noImplicitAny": true,
	  "removeComments": true,
	  "preserveConstEnums": true,
	  "outDir": "./dist",
	  "sourceMap": true,
	  "watch": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}